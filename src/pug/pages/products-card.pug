extends ../layout/main
block variable1
	-
		var title_page = 'Kolorit Legenda'
		var breadcrumbsSubitem = [
				{
					label: 'Краски kolorit',
					link: "/"
				},
				{
					label: 'Продукция',
					link: pagesLink[0].products
				},
				{
					label: 'линейка home',
					link: pagesLink[0].productsSingle
				},
			];
		
block meta
	title= title_page
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='https://www.youtube.com/iframe_api')
	script(src='./assets/scripts/index.js')
	script(src='./assets/scripts/prod-card.js')
block footer
	footer.footer
		include ../includes/footer.pug

block header
	header.header
		include ../includes/header.pug


block content
	.container
		include ../includes/breadcrumbs.pug
	.products-card-banner(style="background-image: url('assets/images/prod-single/1.jpg');")
		.container
			.products-card-banner__title(style="color: #F6F7FC") Kolorit Legenda
			.products-card-banner__text(style="color: #F6F7FC") Kolorit Legenda - флагман линейки Home. Ее глубокоматовый блеск позволяет изящно подчеркнуть фактуру поверхности. Расширенная палитра цветов, позволяет подчеркнуть исключительность вашего интерьера. Идеальна для гостинных, спален и других помещений, в которых цвет и фактура имеет значение, а высший класс истирания делает покрытие долговечным и стойким.
			ul.products-card-banner__hash.products-card-banner-hash
				li.products-card-banner-hash__item #идеально гладкая поверхность
				li.products-card-banner-hash__item #глубокоматовая
				li.products-card-banner-hash__item #изящное финишное покрытие
	.container
		.products-card-block
			.products-card-block__l
				.products-card-block__title Kolorit Legenda
				.products-card-block-img-wrap
					+img('prod-single/ee1.png').img-prod
					ul.products-card-block-info
						each v in [1,1,1]
							//- ----------
							li.products-card-block-info-item
								+img('prod-single/s1.svg').products-card-block-info-item__ico
								.products-card-block-info-item-descr
									+svg('vopr')
									p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
							//- ----------
						//- ----------
						li.products-card-block-info-item.products-card-block-info-item--long
							+img('prod-single/svv.svg').products-card-block-info-item__ico
							.products-card-block-info-item-descr
								+svg('vopr')
								p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
						//- ----------
						li.products-card-block-info-item.products-card-block-info-item--long
							+img('prod-single/svv.svg').products-card-block-info-item__ico
							.products-card-block-info-item-descr
								+svg('vopr')
								p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
						//- ----------
			.products-card-block__r
				ul.products-card-block-list
					each v, yy in ['Cтепень блеска','Разбавляется водой','Устойчивая к частому мытью','Расход 12м2','Тонировка по системе Avatint Tikkurila','Для сухих и влажных помещений','50000 цветов','Подходит для нанесения: кистью, валиком, краскопультом.','Для внутреннего применения (для стен и потолков)']
						li.products-card-block-item
							+svg('in'+yy).products-card-block-item__ico
							span.products-card-block-item__text= v
				.products-card-block__btn-wrap
					a.calc-link(href="#") Калькулятор краски
					a.color-choice-link(href="#") Выбрать цвет
					a.buy-color-link.underline-link(href="#")
						span.red Где купить краску?
		.products-card-tab
			ul.products-card-tab-btns
				each v in ['Область и объекты применения','Технические характеристики', 'документы', 'Инструкция по применению']
					li.products-card-tab-btns-item
						button(type="button").products-card-tab-btn.js-products-card-tab-btn.btn--res= v
			ul.products-card-tab-content
				li.brd.js-products-card-tab-content-item.products-card-tab-content-item.custom-scroll
					ul.usage-area-list
						each v in [1,1,1,1,1]
							//------------
							li.usage-area-item
								h5.usage-area-item__key Идеально для:
								p.usage-area-item__text первичной и ремонтной окраски стен и потолков в гостиных, спальнях.
							//------------
							//------------
							li.usage-area-item
								h5.usage-area-item__key Хорошо подходит для:
								p.usage-area-item__text детских комнатах, кухонь, ванных (за исключением мест прямого попадания воды) и др. жилых помещений, а также в помещениях с высокой эксплуатационной нагрузкой (например, детские сады, учебные заведения, санаторнокурортные, гостиничные, офисные помещения, магазины и т.п.).
							//------------
				li.brd.js-products-card-tab-content-item.products-card-tab-content-item.custom-scroll 1
				li.brd.js-products-card-tab-content-item.products-card-tab-content-item.custom-scroll 2
				li.brd.js-products-card-tab-content-item.products-card-tab-content-item.custom-scroll 3
		.row.products-card-form-row
			.products-card-form
				.products-card-form-title-wrap
					h4.products-card-form__title Запрос просчета
					p.products-card-form__subtitle Если вам нужна помощь в просчете необходимого количества материалов, вы не знаете, какой продукт идеально подойдет под вашу задачу - наши специалисты готовы помочь вам сделать правильный выбор и пасчеты!
				form.modal-form
					input(type="text" required placeholder="Телефон*").modal-form__input
					input(type="email" required placeholder="E-mail*").modal-form__input
					input(type="text" required placeholder="Город*").modal-form__input
					input(type="text" placeholder="Детали запроса").modal-form__input.margin-top--more
					button.btn--res.modal-form__btn Отправить
		each v,j in ['eu5aGhqksbY']
			.row.products-card-video-row.js-prod-video(data-id= v)
				.products-card-video
					.products-card-video-wrap
						.player(id='player'+j)
				.products-card-video-nav
					.products-card-video-nav__title Ролик о КРАСКЕ KOLORIT LEGENDA
					.products-card-video-nav__decor    
					.products-card-video-nav__time.js-products-card-video-nav__time 