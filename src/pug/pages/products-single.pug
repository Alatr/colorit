							.quiz__answers-wrapper
								ul.quiz__answers.js-quiz__answers
									//- each item, index in ['Любой', 'Бетон', 'Гипсокартон', 'Кирпич', 'Обои', 'Шпатлевка', 'ДСП/ДВП', 'Минеральная штукатурка', 'Дерево', 'Металл', 'Плитка', 'Стекло', 'Пластик']
