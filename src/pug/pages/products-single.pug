extends ../layout/main
block variable1
	-
		var title_page = 'Линейка home'
		var breadcrumbsSubitem = [
				{
					label: 'Краски kolorit',
					link: "/"
				},
				{
					label: 'Продукция',
					link: pagesLink[0].products
				},
			];

		
block meta
	title= title_page
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='./assets/scripts/index.js')
	script(src='./assets/scripts/quiz.js')
block footer
	footer.footer
		include ../includes/footer.pug

block header
	header.header
		include ../includes/header.pug


block content
	.container
		include ../includes/breadcrumbs.pug
		style.
			.products-item:nth-child(1) .products-item-l {
				background-image: url('assets/images/temp/z1.jpg');
			}
			@media (max-width: 700px) {
				.products-item:nth-child(1) .products-item-l {
					background-image: none;
				}
			}


			.products-item:nth-child(3) .products-item-l {
				background-image: url('assets/images/temp/z3.jpg');
			}
			@media (max-width: 700px) {
				.products-item:nth-child(3) .products-item-l {
					background-image: none;
				}
			}

			.products-item:nth-child(5) .products-item-l {
				background-image: url('assets/images/temp/z5.jpg');
			}
			@media (max-width: 700px) {
				.products-item:nth-child(5) .products-item-l {
					background-image: none;
				}
			}

		.row.quiz-row
			.quiz
				button.quiz__title.btn--res
					h4.quiz__title-text Быстрый подбор краски 
					+svg('quiz-arrow').quiz__title-icon
				.quiz__inner
