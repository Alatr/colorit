extends ../layout/main
block variable1
	-
		var title_page = 'Компания'
		var breadcrumbsSubitem = [
				{
					label: 'Краски kolorit',
					link: "/"
				},
			];
		
block meta
	title= title_page
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='https://www.youtube.com/iframe_api')
	script(src='./assets/scripts/index.js')
	script(src='./assets/scripts/company.js')
block footer
	footer.footer
		include ../includes/footer.pug

block header
	header.header
		include ../includes/header.pug


block content
	.container
		include ../includes/breadcrumbs.pug
	.company
		.company-main-banner(style="background-image: url('assets/images/company/main-banner.jpg');")
			.container
				h2.company-main-banner__title Вдохновение цветом
				p.company-main-banner__text Компания Kolorit - бренд лакокрасочных материалов с 17-летней историей и известным именем. 
				a(href="#").link-with-circle
					.link-with-circle__circle
						.link-with-circle__circle-inner
							<svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M3.2 9L1.4 7.2L3.2 7.2L5 7.2L3.2 9Z" fill="#C11426"/>
								<path d="M3.2 -5.14989e-07L3.2 9M3.2 9L1.4 7.2L5 7.2L3.2 9Z" stroke="#C11426" stroke-width="0.6"/>
							</svg>

					span.link-with-circle__text Узнать больше
		.company-second-sec
			.container
				.company-second-sec__row.row
					.company-second-sec__content-wrapper
						.company-second-sec__title.company__title 17 лет на рынке
						.company-second-sec__text.company__text Kolorit - краски европейского уровня с гарантией качества. В каждой капле - концентрированный опыт команды специалистов и профессионалов. Это материалы для всего спектра малярных работ. Они позволяют совершить полный цикл окрашивания: от подготовки до финиша на любых поверхностях.
				each v,j in ['eu5aGhqksbY']
					.row.products-card-video-row.js-prod-video(data-id= v)
						.products-card-video
							.products-card-video-wrap
								.player(id='player'+j)
						.products-card-video-nav
							.products-card-video-nav__title Ролик о КРАСКЕ KOLORIT LEGENDA
							.products-card-video-nav__decor    
							.products-card-video-nav__time.js-products-card-video-nav__time 
		.company-advantages.company-advantages_1
				h2.company-advantages__title.company__title Основные преимущества
				.company-advantages__content
					.container
						.company-advantages__inner
							span.company-advantages__number 1/4
							.company-advantages__description-block
								h3.company-advantages__subtitle Гарантия качества
								p.company-advantages__text.company__text Основа продукции Kolorit — высокое качество. Стабильность рецептур, сырье от мировых производителей, контроль процесса производства на 16-ти этапах и неизменные характеристики красок.
								p.company-advantages__text.company__text Продукты дополняют друг друга, создавая качественное покрытие и отличный результат. Постоянно улучшая формулы, мы делаем нашу продукцию еще более безопасной и комфортной в использовании.
							.company-advantages__description-block
								h4.company-advantages__small-title Благодаря этому краски Kolorit:
								ul.company-advantages__list
									li удобные в работе и нанесении;
									li ультрастойкие к истиранию и мытью;
									li идеально ложатся на поверхности;
									li имеют несколько степеней блеска от глубокоматовых до полуглянцевых, чтобы реализовать любые идеи.
								a(href="#").link-with-circle
									.link-with-circle__circle
										.link-with-circle__circle-inner
											<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
												<path d="M9 2.8L7.2 4.6L7.2 2.8L7.2 1L9 2.8Z" fill="#17315B"/>
												<path d="M-4.36308e-07 2.8L9 2.8M9 2.8L7.2 4.6L7.2 1L9 2.8Z" stroke="#17315B" stroke-width="0.6"/>
											</svg>
									span.link-with-circle__text Перейти к продукции
				.company-advantages__big-img(style="background-image: url('assets/images/company/advantages1.jpg');")
		.company-advantages.company-advantages_2
			.company-advantages__big-img(style="background-image: url('assets/images/company/advantages2.jpg');")
			.company-advantages__content
				.container
					.company-advantages__inner
						span.company-advantages__number 2/4
						.company-advantages__description-block
							h3.company-advantages__subtitle Безопасность
							p.company-advantages__text.company__text Краски Kolorit безопасны, гипоаллергенны и не содержат легколетучих органических растворителей, тяжелых металлов, фенолов, алкилфенолэтоксилата и амиака.
							p.company-advantages__text.company__text Благодаря этому они подходят для жилых помещений, детских комнат, школ, больниц и пищевых производств. Заботясь об окружающей среде, мы наладили безотходное производство и используем экологичные материалы.
						.company-advantages__description-block
							h4.company-advantages__small-title.company-advantages__small-title_safety Безопасность наших красок подтверждают:
							ul.products-card-block-info
								//- ----------
								li.products-card-block-info-item
									+img('company/v1.svg').products-card-block-info-item__ico
									.products-card-block-info-item-descr
										+svg('vopr')
										p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
								li.products-card-block-info-item
									+img('company/v2.svg').products-card-block-info-item__ico
									.products-card-block-info-item-descr
										+svg('vopr')
										p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
								//- ----------
								//- ----------
								li.products-card-block-info-item.products-card-block-info-item--long
									+img('company/v3.svg').products-card-block-info-item__ico
									.products-card-block-info-item-descr
										+svg('vopr')
										p.products-card-block-info-item-descr__text заключение «Ассоциации аллергологов Украины» и Института экогигиены и токсикологии о гипоаллергенности продукции;
							a(href="#").link-with-circle
								.link-with-circle__circle
									.link-with-circle__circle-inner
										<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M9 2.8L7.2 4.6L7.2 2.8L7.2 1L9 2.8Z" fill="#17315B"/>
											<path d="M-4.36308e-07 2.8L9 2.8M9 2.8L7.2 4.6L7.2 1L9 2.8Z" stroke="#17315B" stroke-width="0.6"/>
										</svg>
								span.link-with-circle__text Узнать о символах на этикетках
		.company-advantages.company-advantages_3
				.company-advantages__content
					.container
						.company-advantages__inner
							span.company-advantages__number 3/4
							.company-advantages__description-block
								h3.company-advantages__subtitle Цветовые решения
								p.company-advantages__text.company__text Выбирайте любой из более 50 000 цветов из самых известных каталогов Tikkurila Symphony, Monicolor Nova и многих других. Система тонирования совместима с универсальными международными палитрами RAL и NCS для легкой и удобной работы с продукцией Kolorit.
								p.company-advantages__text.company__text  Кроме того, мы разработали первую в Украине палитру для колеровки шпатлевки Kolorit Base Light. И это все для того, чтобы у каждого человека была возможность создать идеальный и неповторимый интерьер.
								a(href="#").link-with-circle
									.link-with-circle__circle
										.link-with-circle__circle-inner
											<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
												<path d="M9 2.8L7.2 4.6L7.2 2.8L7.2 1L9 2.8Z" fill="#17315B"/>
												<path d="M-4.36308e-07 2.8L9 2.8M9 2.8L7.2 4.6L7.2 1L9 2.8Z" stroke="#17315B" stroke-width="0.6"/>
											</svg>
									span.link-with-circle__text Перейти к подбору цвета
							.company-advantages__kolorit-bg-img-wrapper
								+img('company/KOLORIT.svg').company-advantages__kolorit-bg-img
				.company-advantages__big-img(style="background-image: url('assets/images/company/advantages1.jpg');")
				

