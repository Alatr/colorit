extends ../layout/main

	
block meta
	title= 'Home'
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='./assets/scripts/index.js')
	script(src='./assets/scripts/home.js')
block footer
	footer.footer
		include ../includes/footer.pug

block header
	header.header
		include ../includes/header.pug


block content
	.main-section
		.main-section-navbar.brd
			.current-slick
				span.js-current-slick__cnt 1
				span /
				span.js-current-slick__all 6

			.main-section-dots-wrapper.js-main-section-dots-wrapper
			button(type="button").btn--res.slider-btn.js-main-sl-arr-prev
				+svg('arr-small-right')
			button(type="button").btn--res.slider-btn.js-main-sl-arr-next
				+svg('arr-small-left')
		.main-section-sl.js-main-section-sl
			.main-section-sl__1.main-section-sl-1
				.main-section-sl-wrap
					h4.main-section-sl__title Особое ощущение вашего дома
					p.main-section-sl__subtitle Лаки и краски со скандинавской генетикой
				.main-section-sl-1__main-img
					//- +img('sl/sl_1/1.jpg')
					picture
						source(srcset="./assets/images/sl/sl_1/1@320.jpg" media="(max-width: 700px)") 
						source(srcset="./assets/images/sl/sl_1/1@768.jpg" media="(max-width: 768px)") 
						img(src="./assets/images/sl/sl_1/1.jpg" alt="MDN")
				+img('sl/sl_1/2.png').main-section-sl-1__main-img-2
				.main-section-sl-1__btn.main-section-sl-1-btn
					+img('sl/arrow.svg').main-section-sl-1-btn__icon
					span.main-section-sl-1-btn__text Читать о компании
				.mouse-tip.mouse-tip--gray
					+svg('mouse').mouse-tip__icon
					.mouse-tip__text используйте скролл
				.hot-line.hot-line--darken
					.hot-line__text Горячая линия
					a(href="tel:+1234567890").header-phone
						+svg('phone').header-phone__icon
						span.header-phone__text.header__text 1 234 567 890
			.main-section-sl__1.main-section-sl-1
				.main-section-sl-wrap
					h4.main-section-sl__title Особое ощущение вашего дома
					p.main-section-sl__subtitle Лаки и краски со скандинавской генетикой
				.main-section-sl-1__main-img
					//- +img('sl/sl_1/1.jpg')
					picture
						source(srcset="./assets/images/sl/sl_1/1@320.jpg" media="(max-width: 700px)") 
						source(srcset="./assets/images/sl/sl_1/1@768.jpg" media="(max-width: 768px)") 
						img(src="./assets/images/sl/sl_1/1.jpg" alt="MDN")
				+img('sl/sl_1/2.png').main-section-sl-1__main-img-2
				.main-section-sl-1__btn.main-section-sl-1-btn
					+img('sl/arrow.svg').main-section-sl-1-btn__icon
					span.main-section-sl-1-btn__text Читать о компании
				.mouse-tip.mouse-tip--gray
					+svg('mouse').mouse-tip__icon
					.mouse-tip__text используйте скролл
				.hot-line.hot-line--darken
					.hot-line__text Горячая линия
					a(href="tel:+1234567890").header-phone
						+svg('phone').header-phone__icon
						span.header-phone__text.header__text 1 234 567 890
	


	.container-section-slaider-wrap
		.section-slaider-wrap
			.section-slaider.js-section-slaider
				// start
				.first-slide-home.section-slaider__item.slide-content
					ul.slider-breadcrumds-list
						li.slider-breadcrumds-item.slider-breadcrumds-item--active качество
						li.slider-breadcrumds-item Экологичность
						li.slider-breadcrumds-item Сервис
					.wrap
						.first-slide-content__1.slide-content-1
							+img('home/bucket.png').slide-content__bucket
						.first-slide-content__2.slide-content-2 
							span.slide-content__counter
								span 1
								span /
								span 3
					.first-slide-content__3.slide-content-3
						span.slide-content__counter-mob
							span 1
							span /
							span 3
						.sec-sl-btn-wrap
							button(type="button").btn--res.js-sec-sl-btn-wrap--next
								+svg('arr-circ-sec')
							button(type="button").btn--res.js-sec-sl-btn-wrap--prev
								+svg('arr-circ-sec_1')
						.img-overlay
							+img('home/slide_1.jpg').img-overlay__bg
						h3.slide-content__title.js-slide-content__title Гарантия качества
						p.slide-content__text Качество — основа продукции Kolorit. Инновационные формулы, стабильные рецептуры и строгий контроль производства позволяют нам создавать продукты по европейским стандартам качества.
						a(href="#").link--resset.slide-content__btn Подробнее

				// end
				// --
				// start


				.second-slide-home.section-slaider__item.slide-content
					.wrap
						.second-slide-content__1.slide-content-1
							.img-overlay
								+img('home/slide_2.jpg').img-overlay__bg
						.second-slide-content__2.slide-content-2 
							span.slide-content__counter
								span 2
								span /
								span 3
					.second-slide-content__3.slide-content-3
						span.slide-content__counter-mob
							span 2
							span /
							span 3
						.sec-sl-btn-wrap
							button(type="button").btn--res.js-sec-sl-btn-wrap--next
								+svg('arr-circ-sec')
							button(type="button").btn--res.js-sec-sl-btn-wrap--prev
								+svg('arr-circ-sec_1')
						ul.slider-breadcrumds-list
							li.slider-breadcrumds-item качество
							li.slider-breadcrumds-item.slider-breadcrumds-item--active Экологичность
							li.slider-breadcrumds-item Сервис
						+img('temp/q2.png').slide-content__bucket
						
						h3.slide-content__title.js-second__title Безопасность и Экологичность
						p.slide-content__text Наши краски экологичны и гипоаллергенны, имеют эко маркировку “Живая Планета”, безопастны по уровню VOC, а в составе не содержат легколетучих веществ,фенолов, аммиака и свинца.
						a(href="#").slide-content__btn Узнать больше

				// end
				// --
				// start
						
						
						
				.third-slide-home.section-slaider__item.slide-content
					.wrap
						.third-slide-content__1.slide-content-1
							ul.slider-breadcrumds-list
								li.slider-breadcrumds-item качество
								li.slider-breadcrumds-item Экологичность
								li.slider-breadcrumds-item.slider-breadcrumds-item--active Сервис
							+img('temp/q3.png').slide-content__bucket
						.third-slide-content__2.slide-content-2 
							span.slide-content__counter
								span 3
								span /
								span 3
					.third-slide-content__3.slide-content-3
						span.slide-content__counter-mob
							span 3
							span /
							span 3
						.sec-sl-btn-wrap
							button(type="button").btn--res.js-sec-sl-btn-wrap--next
								+svg('arr-circ-sec')
							button(type="button").btn--res.js-sec-sl-btn-wrap--prev
								+svg('arr-circ-sec_1')
						.img-overlay
							+img('home/slide_3.jpg').img-overlay__bg
						h3.slide-content__title.js-third-title Первоклассный сервис
						p.slide-content__text Профессиональные консультации, выкрасы, доставка, обучение — Kolorit создает все условия для простого, понятного и приятного ремонта.
						a(href="#").slide-content__btn Подробнее
				// end

	.home-open-sec
		.page-container
			h2.home-open-sec__title Открой для себя <br> мир Kolorit
			ul.row.home-open-sec-list
				each v,j in pageOpen
					li
						a(href="#").home-open-sec-item
							.home-open-sec-item__img
								+img('temp/o'+j+'.jpg')
							h3.home-open-sec-item__title= v.title

							p.home-open-sec-item__text= v.btn
							.home-open-sec-item__btn Узнать больше
							.home-open-sec-item__overlay
				li
					a(href="#").home-open-sec-item
						.home-open-sec-item__img
							+img('temp/o5.jpg')
						h3.home-open-sec-item__title Новинка
						.home-open-sec-item__btn Узнать больше
						.home-open-sec-item__img2
							+img('temp/o522.png')
				li
					a(href="#").home-news__link.link-arrow-type
						+svg('arr-circ-white').link-arrow-type__icon
						span.link-arrow-type__text Смотреть всю продукцию

	.page-container
		ul.row.page-list
			each vq, jq in pageItm
				li.page-list-item
					a
						h4.page-list-item__title= vq.title
						+svg('p'+jq+'').page-list-item__img
						.page-list-item__btn= vq.btn
	.discounts.bg-overlay
		.page-container 
			.row
				.discounts-navbar.section-navbar
					.discounts-navbar-content__counter.section-note
						span Акция &nbsp;
						span.js-discounts-slick__cnt 1
						span /
						span.js-discounts-slick__all 6

					.discounts-navbar-btn-wrap
						button(type="button").btn--res.slider-btn.js-discount-sl-arr-prev
							+svg('arr-small-right')
						button(type="button").btn--res.slider-btn.js-discount-sl-arr-next
							+svg('arr-small-left')
				
				.discounts-slider-conent.js-discounts-slider-conent
					each v in [1,2,3]
						.discounts-conent
							.discounts-conent__img
								+img('temp/1.jpg')
							h3.discounts-conent__title Скидка 20#{v}% на интерьерные краски
							p.discounts-conent__text В первый месяц весны приобретение фасадных красок Fasilit и Sokelit обойдется вам дешевле на 30%!
							a(href="#").discounts-conent__btn Подробнее
	.home-news.bg-overlay
		.page-container
			.row
				.section-navbar
					.section-note 21 марта 2019
				.home-news__title
					span Итоги выставки KYIVBILD 2020: В центре внимание — стенд KOLORIT
				a(href="#").home-news__link.link-arrow-type
					+svg('arr-circ-white').link-arrow-type__icon
					.link-arrow-type__text Больше новостей
	.home-advice
		.page-container
			.row-row
				.section-navbar
					.section-note-wrap
							.section-note Совет №
								span.js-advice-number 13
							.section-subnote Работа с цветом Ближе к природе: интерьер в экостиле
					.advice-navbar-btn-wrap
						button(type="button").btn--res.slider-btn.js-advice-sl-arr-prev
							+svg('arr-small-right')
						button(type="button").btn--res.slider-btn.js-advice-sl-arr-next
							+svg('arr-small-left')
				.home-advice-sl-wrap
					each v in [1,2,3]
						.home-advice-sl
							.home-advice-sl__img
								+img('temp/2.jpg')
							.home-advice-sl-content
								h3.home-advice-sl__title Ближе к природе: интерьер в экостиле
								p.home-advice-sl__text Поездка на природу – любимый отдых многих жителей каменных джунглей. Чистый и свежий воздух расслабляет, а превосходные пейзажи...
								a(href="#").home-advice-sl__btn Читать далее
								a(href="#").home-advice-sl__link
									+svg('arr-circ-diff')
									span Все советы
	a(href="#").home-news__link.link-arrow-type.all-advice.tablet--hiddenn
		+svg('arr-circ-white').link-arrow-type__icon
		.link-arrow-type__text Все советы
































